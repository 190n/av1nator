<% flash.each do |type, msg| %>
    <p>
        <strong>[<%= type %>]</strong> <%= msg %>
    </p>
<% end %>

<h1>Home</h1>

<%= button_to 'Login with Discord', user_discord_omniauth_authorize_path, method: :post %>

<%= button_to 'Logout', destroy_user_session_path, method: :get %>

<% if user_signed_in? %>
<p>logged in!</p>
<p>
    <img src="<%= current_user.image %>"> <%= current_user.name %>
</p>
<% end %>
